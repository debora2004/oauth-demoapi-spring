server:
	port: 8081

logging:
	level:
		root: ERROR
		org.springframework.web: DEBUG
		org.springframework.security: DEBUG
		org.springframework.security.oauth2: DEBUG
		com.identicum: DEBUG

app:
 	scope:
		read: api.identicum.com/product:read
		write: api.identicum.com/product:write

spring:
	security:
		oauth2:
			resourceserver:
				opaquetoken:
					client-id: ${OPAQUE_CLIENT_ID:}
					client-secret: ${OPAQUE_CLIENT_SECRET:}
					introspection-uri: ${OPAQUE_INTROSPECTION_ENDPOINT:}
